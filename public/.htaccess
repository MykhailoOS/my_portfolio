# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle API requests
    RewriteRule ^api/?$ api.php [L,QSA]
    
    # Serve static assets
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Route everything else to index.php
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    
    # CORS headers
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, X-CSRF-Token, Authorization"
    Header set Access-Control-Max-Age "3600"
</IfModule>

# PHP settings
<IfModule mod_php.c>
    php_value upload_max_filesize 5M
    php_value post_max_size 50M
    php_value max_execution_time 60
    php_value memory_limit 256M
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Custom error pages with CORS headers
ErrorDocument 404 "<!DOCTYPE html><html><head><meta charset='UTF-8'><script>if(window.location.pathname.includes('api')){document.write('{\"error\":\"Not found\"}');}</script></head><body><h1>404 Not Found</h1></body></html>"
